<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:background="@drawable/bg_top">

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/button_selector_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="湿度告警"
            android:textColor="@color/black"
            android:textSize="@dimen/f_20"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="超低告警值："/>
                <EditText
                    android:id="@+id/suplow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="3"
                    android:inputType="number"
                    android:background="@null"
                    android:hint="请输入最低告警值（%）"
                    android:textSize="@dimen/f_15"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="低告警值："/>
                <EditText
                    android:id="@+id/low"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:maxLength="3"
                    android:inputType="number"
                    android:hint="请输入低告警值（%）"
                    android:textSize="@dimen/f_15"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="超高告警值："/>
                <EditText
                    android:id="@+id/suphigh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="3"
                    android:inputType="number"
                    android:hint="请输入最高告警值（%）"
                    android:background="@null"
                    android:textSize="@dimen/f_15"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="高告警值："/>
                <EditText
                    android:id="@+id/high"
                    android:hint="请输入高告警值（%）"
                    android:layout_width="match_parent"
                    android:maxLength="3"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/f_15"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="手机动作："/>
                <Spinner
                    android:id="@+id/active_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@null"
                    android:textSize="@dimen/f_20"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="低告警动作："/>
                <Spinner
                    android:id="@+id/active_low"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:textSize="@dimen/f_20"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="高告警动作："/>
                <Spinner
                    android:id="@+id/active_high"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@null"
                    android:textSize="@dimen/f_20"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="开启幅度："/>
                <Spinner
                    android:id="@+id/degree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:textSize="@dimen/f_20"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="控制时长："/>
                <EditText
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:maxLength="3"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入时长（分钟）"
                    android:textSize="@dimen/f_15"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="150dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/f_20"
                    android:layout_height="match_parent"
                    android:text="开启自动控制："/>
                <RadioGroup
                    android:id="@+id/active_rg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:textSize="@dimen/f_20"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:id="@+id/auto_true"
                        android:text="是"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:id="@+id/auto_false"
                        android:text="否"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <Button
                android:id="@+id/sure"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="25sp"
                android:text="确\t\t\t\t认"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>