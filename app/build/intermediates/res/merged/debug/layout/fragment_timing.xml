<?xml version="1.0" encoding="utf-8"?>
<com.kys26.webthings.view.MyScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/timing_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/create_time_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timing_list"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/mp_30"
            android:layout_marginTop="@dimen/mp_30"
            android:gravity="center_horizontal"
            android:text="+  新建定时"
            android:textColor="@drawable/timing_text_selector"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/point_txt"
            android:layout_below="@+id/timing_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="20sp">

        </TextView>
    </RelativeLayout>
</com.kys26.webthings.view.MyScrollview>