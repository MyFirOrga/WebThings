<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@android:id/tabhost"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/Config_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="wrap_content"
            android:layout_height="1dip" >
        </TabWidget>

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="wrap_content"
            android:layout_height="462dp"
            android:layout_gravity="center"
            android:background="#000000"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"
            android:layout_weight="0.99"/>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >
        </FrameLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="50dp">
            <Button
                android:id="@+id/tab_layout_bottom_myclassbtn_reminder"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="50dp">
            <Button
                android:id="@+id/tab_layout_bottom_filesbtn_reminder"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="50dp">
            <Button
                android:id="@+id/tab_layout_bottom_broadcastbtn_reminder"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                />
            </RelativeLayout>
         <!--   <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="50dp">
            <Button
                android:id="@+id/tab_layout_bottom_personbtn_reminder"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            !-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_bottom_btn_linear"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingTop="4dp"
            android:background="@drawable/text" >
            <LinearLayout
                android:id="@+id/main_btn"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:layout_weight="1.0"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/quare"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/tab_layout_main_bottom_bg"/>
                <TextView
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_activity_congigTab_main"/>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/classbro_btn"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/history"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/tab_layout_history_bottom_bg"/>
                <TextView
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_activity_config_files"/>
                </LinearLayout>

            <LinearLayout
            android:id="@+id/files_btn"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center"
            >
             <Button
                android:id="@+id/settings"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/tab_layout_settings_bottom_bg"
                />
                <TextView
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_activity_config_change"/>
                </LinearLayout>
          <!--  <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:layout_weight="1.0"
                android:paddingTop="5dp"
                android:gravity="center">
             <Button
                android:id="@+id/person_btn"
                android:background="@drawable/tab_layout_bottom_personbtn_bg"
                android:layout_width="35dp"
                android:layout_height="33dp"/>
                <TextView
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_activity_mycalss_bottomme"/>
        </LinearLayout>!-->
    </LinearLayout>
    </LinearLayout>
</TabHost>