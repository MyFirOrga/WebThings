<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >

    <TextView
        android:id="@+id/item_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/mp_20"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/f_16"
        />

    <TextView
        android:id="@+id/item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/mp_20"
        android:gravity="center_vertical"
        android:text="18"
        android:textColor="@color/gray"
        android:textSize="@dimen/f_13"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"
        android:layout_below="@+id/item_data_tv"
        />
</RelativeLayout>