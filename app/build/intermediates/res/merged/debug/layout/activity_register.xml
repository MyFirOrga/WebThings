<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kys26.webthings.login.RegisterActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edittext"
        android:textColor="@color/black"
        android:hint="用户名(只允许包含字母，数字)"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="15dp"
        android:textColorHint="@color/red"
        android:layout_margin="10dp"
        android:id="@+id/register_username"
        android:layout_below="@+id/mobileCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:background="@drawable/login_edittext"
            android:textColor="@color/black"
            android:hint="密码(只允许包含字母，数字)"
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="@color/red"
            android:layout_margin="10dp"
            android:id="@+id/register_password"
            android:layout_below="@+id/mobileCode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:background="@drawable/login_edittext"
            android:textColor="@color/black"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="@color/red"
            android:layout_margin="10dp"
            android:id="@+id/register_passwordAgain"
            android:layout_below="@+id/mobileCode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edittext"
            android:textColor="@color/black"
            android:hint="手机号(只允许包含数字)"
            android:inputType="phone"
            android:textSize="15dp"
            android:ems="10"
            android:textColorHint="@color/red"
            android:layout_margin="10dp"
            android:id="@+id/register_phone"
            android:layout_below="@+id/mobileCode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edittext"
            android:textColor="@color/black"
            android:hint="邮箱"
            android:textSize="15dp"
            android:ems="10"
            android:textColorHint="@color/red"
            android:layout_margin="10dp"
            android:id="@+id/register_email"
            android:layout_below="@+id/mobileCode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:background="@drawable/login_edittext"
                android:textColor="@color/black"
                android:hint="验证码"
                android:inputType="phone"
                android:ems="10"
                android:textColorHint="@color/red"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/register_virifcode"
                android:layout_below="@+id/mobileCode"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
            <Button
                android:id="@+id/registerGetCode"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/activity_register_timebtn_bg"
                android:layout_margin="10dp"
                android:text="获取验证码"
                android:textSize="15dp"
                android:textColor="@color/gray"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </LinearLayout>
        <Button
            android:id="@+id/registerNext"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_btn"
            android:layout_margin="10dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </LinearLayout>
</RelativeLayout>
