<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/mp_20"
            android:gravity="center_vertical"
            android:text="自动控制"
            android:textColor="@color/black"
            android:textSize="@dimen/f_16" />

        <ProgressBar
            android:id="@+id/auto_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/warn_setting_switch"
            android:layout_toStartOf="@+id/warn_setting_switch"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/warn_setting_switch"
            style="@style/MySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_20"
            android:background="@drawable/switch_btn_bg" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/warning_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/sec_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/mp_20"
            android:gravity="center_vertical"
            android:text="氨气浓度高预警值"
            android:textColor="@color/black"
            android:textSize="@dimen/f_16" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/unit"
            android:textColor="@color/gray"
            android:textSize="@dimen/f_15" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_20"
            android:textColor="@color/gray"
            android:textSize="@dimen/f_15">

        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/action_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/mp_20"
            android:gravity="center_vertical"
            android:text="告警动作"
            android:textColor="@color/black"
            android:textSize="@dimen/f_16" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_25"
            android:background="@drawable/right_lv" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />
</LinearLayout>