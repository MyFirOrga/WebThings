<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">
   <TextView
        android:id="@+id/detailTag"
        android:gravity="center"
        android:textSize="@dimen/f_18"
        android:paddingTop="@dimen/mp_5"
        android:textColor="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_margin="10dp"
        android:padding="15dp"
        android:paddingRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/setwifi_topconent_bg"
        >
        <Button
            android:id="@+id/wifibg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/wen"/>
        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="2dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/splash_shadow"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/framName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/f_18"
                android:layout_marginBottom="7dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/gatewag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/f_13"
                android:layout_marginBottom="5dp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/f_13"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/curveChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1.0"
        />

    </LinearLayout>
</LinearLayout>
