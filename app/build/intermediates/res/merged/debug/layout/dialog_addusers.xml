<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <EditText
                android:id="@+id/dialog_addusers_trueNameev"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/dialog_addusers_trueNametv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittexy_bg"
                />

            <TextView
                android:id="@+id/dialog_addusers_trueNametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text="真实姓名:"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <EditText
            android:id="@+id/dialog_addusers_phoneev"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/dialog_addusers_phonetv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittexy_bg"
            />

        <TextView
            android:id="@+id/dialog_addusers_phonetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:text="手机号码:"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <EditText
            android:id="@+id/dialog_addusers_emailev"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/dialog_addusers_emailtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittexy_bg"
            />

        <TextView
            android:id="@+id/dialog_addusers_emailtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:text="电子邮箱:"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
</LinearLayout>