<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/newPassword_edit"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="82dp"
        android:background="@null"
        android:drawableBottom="@drawable/editbottom_selector"
        android:drawableLeft="@drawable/dl_icon_password"
        android:drawablePadding="15dp"
        android:hint="您的旧密码"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:selectAllOnFocus="true" />


    <EditText
        android:id="@+id/oldPassword_edit"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:drawableBottom="@drawable/editbottom_selector"
        android:drawableLeft="@drawable/dl_icon_password"
        android:drawablePadding="15dp"
        android:hint="您的新密码"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/reNewPassword_edit"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:drawableBottom="@drawable/editbottom_selector"
        android:drawableLeft="@drawable/dl_icon_password"
        android:drawablePadding="15dp"
        android:hint="请再次输入您的新密码"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/modify_sure_btn"
        android:layout_width="241dp"
        android:layout_height="41dp"
        android:layout_below="@+id/edit_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_selector"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>