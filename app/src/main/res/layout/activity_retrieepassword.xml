<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".LoginActivity" >

   <!-- <TextView
        android:id="@+id/ret_topname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="密码修改"
        android:textColor="@android:color/black" />-->

    <ImageView
        android:id="@+id/re_loginImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/icon_app"
        android:layout_marginTop="10dip" />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edittext"
        android:textColor="@color/black"
        android:hint="用户名"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="18dp"
        android:id="@+id/changePas_username"
        android:layout_below="@+id/mobileCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <com.kys26.webthings.view.ClearEditText
        android:id="@+id/ret_userPwd"
        style="@style/cet_loginUserPwd"
        android:hint="输入密码"
        android:textColor="@color/black"
        android:password="true"
        />
    <com.kys26.webthings.view.ClearEditText
        android:id="@+id/ret_userPwdNew"
        style="@style/cet_loginUserPwd"
        android:hint="输入新密码"
        android:password="true"
        android:textColor="@color/black"
        />
    <com.kys26.webthings.view.ClearEditText
        android:id="@+id/ret_userPwdAg"
        style="@style/cet_loginUserPwd"
        android:hint="再次输入新密码"
        android:password="true"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dip"
        android:gravity="center"
        >
        <Button
            android:id="@+id/ret_ensure"
            style="@style/tv_retrievePassword"
            android:layout_marginTop="20dip"
            android:background="@drawable/login_btn"
            android:text="确认修改" />
    </LinearLayout>
</LinearLayout>